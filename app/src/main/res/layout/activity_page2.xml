<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        tools:context=".Page2">
    <android.support.v7.widget.RecyclerView
            android:layout_width="400dp"
            android:layout_height="389dp"
            android:background="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.017"
            android:id="@+id/recyclerView_Second"/>
    <EditText android:layout_width="0dp" android:layout_height="49dp"
              android:layout_marginEnd="4dp"
              android:textColorHint="@color/colorPrimary"
              android:textColorHighlight="@color/colorPrimary"
              android:background="@drawable/button_border"
              android:inputType="number"
              app:layout_constraintEnd_toEndOf="parent"
              android:textSize="16sp"
              android:id="@+id/textYear"
              android:textAlignment="center"
              app:layout_constraintStart_toEndOf="@+id/textName" android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/recyclerView_Second"
              android:hint="Movie year" app:layout_constraintHorizontal_bias="1.0"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/sendButton"
              app:layout_constraintVertical_bias="0.0" android:textStyle="bold"
              android:textColor="@color/colorPrimary"/>
    <EditText android:layout_width="0dp" android:layout_height="49dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="4dp"
              android:hint="Movie title"
              android:textColorHint="@color/colorPrimary"
              android:textColorHighlight="@color/colorPrimary"
              android:background="@drawable/button_border"
              android:id="@+id/textName"
              android:textSize="18sp" android:textAlignment="center"
              app:layout_constraintTop_toBottomOf="@+id/recyclerView_Second"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button3"
              app:layout_constraintVertical_bias="0.0" android:textStyle="bold"
              app:layout_constraintEnd_toStartOf="@+id/textYear" android:layout_marginEnd="8dp"
              android:textColor="@color/colorPrimary"/>
    <ImageButton
            android:background="@drawable/roundedbutton"
            android:src="@drawable/plus"
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:id="@+id/sendButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/button2"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.465"/>
    <ImageButton
            android:background="@drawable/roundedbutton"
            android:src="@drawable/refresh"
            android:layout_width="76dp"
            android:layout_height="77dp"
            android:id="@+id/button2"
            android:onClick="restart"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button3" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/sendButton" android:layout_marginEnd="16dp"/>
    <ImageButton
            android:background="@drawable/roundedbutton"
            android:src="@drawable/undo"
            android:onClick="openPage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.51"/>
</android.support.constraint.ConstraintLayout>