<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTheme"
        tools:context=".MainActivity">

    <Button
            android:text="My Films"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="openPage2"
            android:textColor="@color/colorTheme2"
            android:background="@color/colorBlack"
            android:id="@+id/addButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="492dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Films List"
            android:layout_width="0dp"
            android:onClick="openPage3"
            android:textColor="@color/colorTheme2"
            android:background="@color/colorBlack"
            android:layout_height="wrap_content"
            android:id="@+id/button4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/addButton" app:layout_constraintHorizontal_bias="0.504"/>
    <HorizontalScrollView
            android:layout_width="395dp"
            android:layout_height="412dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/im1"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_width="match_parent"/>
            <ImageView
                    android:id="@+id/im2"
                    android:layout_height="407dp"
                    android:scaleType="fitStart"
                    android:layout_width="395dp"/>
            <ImageView
                    android:id="@+id/im3"
                    android:layout_height="407dp"
                    android:scaleType="fitStart"
                    android:layout_width="395dp"/>
            <ImageView
                    android:id="@+id/im4"
                    android:layout_height="407dp"
                    android:scaleType="fitStart"
                    android:layout_width="395dp"/>

        </LinearLayout>
    </HorizontalScrollView>


</android.support.constraint.ConstraintLayout>